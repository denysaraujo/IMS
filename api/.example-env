# ========================
# CONFIGURAÇÕES BÁSICAS
# ========================
SPRING_APPLICATION_NAME=api
SERVER_PORT=8080
DEBUG=true

# ========================
# CONFIGURAÇÕES DO BANCO DE DADOS
# ========================
SPRING_DATASOURCE_URL=jdbc:postgresql://db:5432/bdims
SPRING_DATASOURCE_USERNAME=usuarioims
SPRING_DATASOURCE_PASSWORD=ims123
SPRING_DATASOURCE_DRIVER_CLASS_NAME=org.postgresql.Driver

# ========================
# CONFIGURAÇÕES JPA/HIBERNATE
# ========================
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=true
SPRING_JPA_PROPERTIES_HIBERNATE_DIALECT=org.hibernate.dialect.PostgreSQLDialect

# ========================
# CONFIGURAÇÕES DO HIKARI CP
# ========================
SPRING_DATASOURCE_HIKARI_MAXIMUM_POOL_SIZE=20
SPRING_DATASOURCE_HIKARI_MINIMUM_IDLE=5
SPRING_DATASOURCE_HIKARI_IDLE_TIMEOUT=30000
SPRING_DATASOURCE_HIKARI_MAX_LIFETIME=2000000
SPRING_DATASOURCE_HIKARI_CONNECTION_TIMEOUT=30000

# ========================
# CONFIGURAÇÕES JWT
# ========================
JWT_SECRET=
JWT_EXPIRATION_MS=3600000

# ========================
# CONFIGURAÇÕES DE CORS
# ========================
CORS_ALLOWED_ORIGINS=http://localhost:4200
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE